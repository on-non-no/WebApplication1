@model TestAPP.Models.Login.LoginViewModel;

@if (TempData["ErrorMessage"] != null)
{
    <script>
        var errorMessage = "아이디 또는 비밀번호가 잘못되었습니다.";
        alert(errorMessage);
    </script>
}

@if (TempData["ErrorMessage1"] != null)
{
    <script>
        var errorMessage = "로그인이 필요합니다.";
        alert(errorMessage);
    </script>
}

@if (TempData["SuccessMessage"] != null)
{
    <script>
        var successMessage = "회원가입이 완료되었습니다!";
        alert(successMessage);
    </script>
}


<div class="row justify-content-center">
    <div class="bg-white col-5 p-5">
        <div class="row">
            <div class="col h2 text-center mb-4">
                로그인
            </div>
        </div>
        <form action="/Login/Check" method="POST">
            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
            <div class="row mb-4" >
                <div class="col-8">
                    <div class="form-floating mb-3">
                        @* <input type="text" class="form-control" id="floatingID" name="아이디" placeholder="name@example.com"> *@
                        <input type="text" asp-for="아이디" class="form-control" id="floatingID" placeholder="사용자 아이디 입력" />
                        <label for="floatingID">아이디</label>
                    </div>
                    <div class="form-floating">
                        @* <input type="password" class="form-control" id="floatingPW" name="비밀번호" placeholder="Password"> *@
                        <input type="password" asp-for="비밀번호" class="form-control" id="floatingPW"  placeholder="비밀번호 입력" />
                        <label for="floatingPW">비밀번호</label>
                    </div>
                </div>
                <div class="col-4 d-grid">
                    <button class="btn btn-primary" type="submit">LOGIN</button>
                </div>
            </div>
        </form>
        <div class="row justify-content-around mt-3">
            <div class="col-8 d-grid">
                <div class="btn-group">
                    <a href="/FindID" class="btn btn-outline-secondary">아이디 찾기</a>
                    <a href="/FindPW" class="btn btn-outline-secondary">비밀번호 찾기</a>
                </div>
            </div>
            <div class="col-4 d-grid"><a class="btn btn-secondary" href="/Register">회원가입</a></div>
        </div>
    </div>
</div>